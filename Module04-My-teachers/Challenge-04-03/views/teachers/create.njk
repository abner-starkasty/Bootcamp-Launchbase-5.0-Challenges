{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section 
            class="avatar"
            style="background: url(https://source.unsplash.com/collection/8874679/500x500) no-repeat center center / cover">
        </section>

        <section class="details">
            <h3>New Teachers</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                        type="url" 
                        name="avatar_url" 
                        placeholder="http://..."
                    >
                </div>
            </div>

            <div class="item">
                <div>Teacher</div>
                <div>
                    <input 
                        type="text" 
                        name="name" 
                        placeholder="Please, type your name"
                    >
                </div>
            </div>
            <div class="item">
                <div>Date of birth</div>
                <div>
                    <input 
                        type="date" 
                        name="birth"
                    >
                </div>
            </div>
            <div class="item">
                <div>Degree</div>
                <div>
                    <select name="degree" required>
                        <option value="">Select...</option>
                        <option value="Hs">High school</option>
                        <option value="Cl">College</option>
                        <option value="Un">University</option>
                        <option value="Ma">Master's</option>
                        <option value="PHD">Doctorate</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Type Class</div>
                <div>
                    <span><input type="radio" name="type_class" value="IP" checked>In Person</span>
                    <span><input type="radio" name="type_class" value="EL">E-learning</span>
                </div>
            </div>
            <div class="item">
                <div>Expertise</div>
                <div>
                    <input 
                        type="text" 
                        name="expertise" 
                        placeholder="Please, separate your expertise by a comma"
                    >
                </div>
            </div>

            <button type="submit">Save</button>
        </section>
    </form>
{% endblock content %}