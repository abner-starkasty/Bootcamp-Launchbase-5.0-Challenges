<!-- First server -->

{% extends "layout.njk" %}

{% block head %}
        <title>Cursos - Rocketseat</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block changepage %}
    <a href="/about" class="change-page">
        <img src="/assets/home-black-24dp.svg" alt="Home">
    </a>
{% endblock %}

{% block content %}
        <section class="cards">
            <div class="card" id="starter">
                <div class="card__image-container">
                    <img src="/assets/starter.svg" alt="Starter">
                </div>
                <div class="card__info">
                    <p>02 Módulos</p>
                    <p class="card__price">Gratuito</p>
                </div>
            </div>
            <div class="card" id="launchbase">
                <div class="card__image-container">
                    <img src="/assets/launchbase.svg" alt="LaunchBase">
                </div>
                <div class="card__info">
                    <p>08 Módulos</p>
                    <p class="card__price">Pago</p>
                </div>
            </div>
            <div class="card" id="gostack">
                <div class="card__image-container">
                    <img src="/assets/gostack.svg" alt="GoStack">
                </div>
                <div class="card__info">
                    <p>10 Módulos</p>
                    <p class="card__price">Pago</p>
                </div>
            </div>
        </section>

        <div class="modal-overlay">
            <div class="modal">
                <div class="icons">
                    <a class="maximize-modal">
                        <span class="material-icons">open_in_full</span>
                    </a>
                    <a class="close-modal">
                        <span class="material-icons">close</span>
                    </a>
                </div>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>
{% endblock %}

{% block script %}
    <script src="scripts.js"></script>
{% endblock %}